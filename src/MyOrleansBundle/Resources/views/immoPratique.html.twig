{% extends 'MyOrleansBundle::layout.html.twig' %}

{% block content %}

    <!--logo dde de documentation-->
    <div class="breadcrumb">
        <a href="#" data-activates="slide-out" class="button-collapse pulse-button">
            <i class="material-icons">message</i></a>
    </div>
    <!--fin logo dde de documentation-->

    <!--grande image du haut-->
    <div class="header-image">
        <img class="img-header" src="{{ asset('img/orleans2.jpg') }}"
             alt="photo interieur appartement"/>
    </div>

    <!--fin grande image du haut-->


    <!--menu dossiers thematiques-->
    <div class="fiches-ancres">
        <div class="row bloc-color">
            <div class="col l12 ">
                <div class="row nav-immo-pratique center">
                    <div class="col s12 l4">
                        <a class="waves-effect waves-light btn" href="#conseils">Fiches conseils</a>
                    </div>
                    <div class="col s12 l4">
                        <a class="waves-effect waves-light btn" href="#thematiques">Dossiers thématiques</a>
                    </div>
                    <div class="col s12 l4">
                        <a class="waves-effect waves-light btn" href="#actu-immo">Actualités immobilières</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--fin menu dossier thématiques-->


    <!--premier block-->
    <div class="container bloc">

        <h2 class="subtitle fancy" id="conseils"><span>Nos fiches conseils</span></h2>

        {% for article in articlesConseils %}
            {% if article.id is odd %}
                <div class="row">
                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-right">
                            <div class="boxi">
                                <h4>{{ article.titre }}</h4>
                                <p>{{ article.texte }}</p>
                                <div class="center">
                                    <a href="{{ path('download', {'id': article.id}) }}" class="waves-effect waves-light btn"><i class="material-icons left">print</i>
                                        Télécharger la fiche</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-left">
                            {% for media in article.medias %}
                                <img src="{{ asset('uploads/'~media.lien) }}" class="responsive-img"
                                 alt="image fiche conseil"/>
                            {% endfor %}
                        </div>
                    </div>
                </div>


            {% elseif article.id is even %}

                <div class="row">
                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-right">
                            {% for media in article.medias %}
                                <img src="{{ asset('uploads/'~media.lien) }}" class="responsive-img"
                                 alt="image fiche conseil"/>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-left">
                            <div class="boxi">
                                <h4>{{ article.titre }}</h4>
                                <p>{{ article.texte }}</p>
                                <div class="center">
                                    <a href="{{ path('download', {'id': article.id}) }}" class="waves-effect waves-light btn"><i class="material-icons left">print</i>
                                        Télécharger la fiche</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            {% endif %}
        {% endfor %}
    </div>
    <!--fin premier block-->


    <!-- deuxième block -->

    <div class="container">
        <h2 class="subtitle fancy" id="thematiques"><span>Dossier thématiques</span></h2>
        {% for article in articlesDossier %}
            {% if article.id is odd %}
                <div class="row">
                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-right">
                            <div class="boxi">
                                <h4>{{ article.titre }}</h4>
                                <p>{{ article.texte }}</p>
                                <div class="center lien-article">
                                    <a href="#">LIRE LE DOSSIER</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-left">
                            {% for media in article.medias %}
                                <img src="{{ asset('uploads/'~media.lien) }}" class="responsive-img"
                                 alt="image fiche conseil"/>
                            {% endfor %}
                        </div>
                    </div>
                </div>

            {% elseif article.id is even %}

                <div class="row">
                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-right">
                            {% for media in article.medias %}
                                <img src="{{ asset('uploads/'~media.lien) }}" class="responsive-img"
                                     alt="image fiche conseil"/>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="col s12 m6 l6">
                        <div data-aos="fade-up-left">
                            <div class="boxi">
                                <h4>{{ article.titre }}</h4>
                                <p>{{ article.texte }}</p>
                                <div class="center lien-article">
                                    <a href="#">LIRE LE DOSSIER</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% endif %}
        {% endfor %}
    </div>
    <!--fin deuxième block-->

    <!--troisième block-->
    <div class="container">
        <h2 class="subtitle fancy" id="actu-immo"><span>Actualités immobilières</span></h2>
        {% for article in articlesActu %}
                {% if article.id is odd %}
                    <div class="row">
                        <div class="col s12 m6 l6">
                            <div data-aos="fade-up-right">
                                <div class="boxi">
                                    <h4>{{ article.titre }}</h4>
                                    <p>{{ article.texte | raw }}</p>
                                    <div class="center lien-article">
                                        <a href="#">LIRE L'ARTICLE</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col s12 m6 l6">
                            <div data-aos="fade-up-left">
                                {% for media in article.medias if media.typeMedia.nom == "image-cover"%}
                                <img src="{{ asset('uploads/'~media.lien) }}" class="responsive-img"
                                     alt="image fiche conseil"/>
                                {% endfor %}

                            </div>
                        </div>

                    </div>

                {% elseif article.id is even %}

                    <div class="row">
                        <div class="col s12 m6 l6">
                            <div data-aos="fade-up-right">
                                {% for media in article.medias if media.typeMedia.nom == "image-cover"%}
                                <img src="{{ asset('uploads/'~media.lien) }}" class="responsive-img"
                                     alt="image fiche conseil"/>
                                {% endfor %}

                            </div>
                        </div>

                        <div class="col s12 m6 l6">
                            <div data-aos="fade-up-left">
                                <div class="boxi">
                                    <h4>{{ article.titre }}</h4>
                                    <p>{{ article.texte | raw }}</p>
                                    <div class="center lien-article">
                                        <a href="#">LIRE L'ARTICLE</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
        {% endfor %}
    </div>
    <!--fin troisième block-->

    <!-- début formulaire de contact -->
    <form method="post" action="">
        <div id="slide-out" class="side-nav">
            <div class="userView">
                <h3 align="center">Contactez nous !</h3>
                <h4 align="center">{{ telephone_number }}</h4>
                {{ form_start(form) }}
                <div class="row">

                    <div class="input-field col l6 m6 s12">
                        <i class="material-icons prefix">account_circle</i>
                        {{ form_label(form.nom) }}
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom) }}
                    </div>

                    <div class="input-field col l6 m6 s12">
                        <i class="material-icons prefix">account_circle</i>
                        {{ form_label(form.prenom) }}
                        {{ form_widget(form.prenom) }}
                        {{ form_errors(form.prenom) }}
                    </div>

                    <div class="input-field col l6 m6 s12">
                        <i class="material-icons prefix">email</i>
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="input-field col l6 m6 s12">
                        <i class="material-icons prefix">phone</i>
                        {{ form_label(form.telephone) }}
                        {{ form_widget(form.telephone) }}
                        {{ form_errors(form.telephone) }}
                    </div>

                    <div class="input-field col l6 m6 s12">
                        <i class="material-icons prefix">my_location</i>
                        {{ form_label(form.codePostal) }}
                        {{ form_widget(form.codePostal) }}
                        {{ form_errors(form.codePostal) }}
                    </div>

                    <div class="input-field col l6 m6 s12">
                        <i class="material-icons prefix">location_on</i>
                        {{ form_label(form.ville) }}
                        {{ form_widget(form.ville) }}
                        {{ form_errors(form.ville) }}
                    </div>

                    <div class="input-field col l12 m12 s12">
                        <i class="material-icons prefix">my_location</i>
                        {{ form_label(form.adresse) }}
                        {{ form_widget(form.adresse) }}
                        {{ form_errors(form.adresse) }}
                    </div>

                    <div class="input-field col l12 m12 s12">
                        <p class="newsletter">Quel est l'objet de votre message?</p>
                        <i class="material-icons prefix">info_outline</i>

                        {{ form_widget(form.sujet) }}
                        {{ form_errors(form.sujet) }}
                    </div>

                    <div class="input-field col l12 m12 s12">
                        <i class="material-icons prefix">mode_edit</i>
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </div>

                    <div class="row center">
                        <p class="newsletter">Je souhaite m'abonner à la newsletter?</p>

                        {{ form_widget(form.newsletter) }}
                        {{ form_errors(form.newsletter) }}
                    </div>
                </div>

                <div class="input-field col l12 envoyer">
                    {{ form_row(form.envoyer) }}
                </div>

                {{ form_end(form) }}
            </div>

        </div>

    </form>

    <!--fin formulaire de contact-->




    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript" src="{{ asset('js/aos.js') }}"></script>
        <script>
            AOS.init();
            //formulaire de contact
            $('.button-collapse').sideNav({
                    edge: 'right', // Choose the horizontal origin
                    draggable: false, // Choose whether you can drag to open on touch screens
                    closeOnClick: true
                }
            );
            $('#alert_close').click(function(){
                $( "#alert_box" ).fadeOut( "slow", function() {
                });
            });

        </script>
    {% endblock %}
{% endblock %}

