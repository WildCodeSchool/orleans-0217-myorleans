{% extends 'layout_admin.html.twig' %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row center">
                <div class="col-lg-12 col-md-12">
                    <h3>Bonjour et bienvenue sur votre espace administration</h3>
                    <h5> Celui-ci est conçu dans le but de gérer intuitivement le contenu de votre site internet. <br>
                    </h5>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <div class="card">
                        <div class="card-header" data-background-color="orange">
                            <h4 class="title">Résidences</h4>
                            <p class="category">Voici les dernières résidences ajoutées</p>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table table-hover">
                                <thead class="text-warning">
                                <th>Nom</th>
                                <th>Adresse</th>
                                <th>Code Postal</th>
                                <th>Ville</th>
                                <th>Aperçu</th>
                                <th>Éditer</th>
                                </thead>
                                <tbody>
                                {% for residence in residences %}

                                    <tr>
                                        <td>{{ residence.nom }}</td>
                                        <td>{{ residence.adresse }}</td>
                                        <td>{{ residence.codePostal }}</td>
                                        <td>{{ residence.ville }}</td>

                                        <td>
                                            <a href="{{ path('admin_residence_show', { 'id': residence.id }) }}"><i
                                                        class="material-icons">remove_red_eye</i></a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_residence_edit', { 'id': residence.id }) }}"><i
                                                        class="material-icons">build</i></a>
                                        </td>
                                    </tr>

                                {% endfor %}
                                </tbody>
                            </table>
                            <p>
                                Ajoutez une nouvelle résidence
                                <a href="{{ path('admin_residence_new') }}" class="btn-floating btn-large waves-effect waves-light light-green"><i class="material-icons">create</i>Ajouter une
                                    résidence</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}