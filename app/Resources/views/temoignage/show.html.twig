{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Témoignage n°: {{ temoignage.id }}</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ temoignage.id }}</td>
                                </tr>
                                <tr>

                                    <th>Theme</th>
                                    <td>{{ temoignage.theme }}</td>
                                </tr>
                                <tr>
                                    <th>Auteur</th>
                                    <td>{{ temoignage.auteur }}</td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>{{ temoignage.date }}</td>
                                </tr>
                                <tr>
                                    <th>Message</th>
                                    <td>{{ temoignage.message }}</td>
                                </tr>
                                </tbody>
                            </table>
                            <hr>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_temoignage_index') }}"><i class="material-icons">keyboard_return</i>Retour
                                        à la liste des témoignages</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_temoignage_edit', { 'id': temoignage.id }) }}"><i
                                                class="material-icons">build</i>Éditer ce temoignage</a>
                                </li>

                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Delete"
                                           class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
