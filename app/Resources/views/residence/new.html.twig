{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Créer une nouvelle résidence</h4>
                        </div>
                        <div class="card-content table-responsive">

                            {{ form_start(form) }}
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.nom, "Nom de la résidence:") }}
                                    {{ form_widget(form.nom) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(form.favoris, 'Favoris: ') }}
                                    {{ form_widget(form.favoris) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.adresse, 'Adresse: ') }}
                                    {{ form_widget(form.adresse) }}
                                </div>
                                <div class="col s6 padding-top">
                                    {{ form_label(form.quartier, 'Quartier: ') }}
                                    {{ form_widget(form.quartier) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.ville, 'Ville: ') }}
                                    {{ form_widget(form.ville) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(form.codePostal, 'Code Postal: ') }}
                                    {{ form_widget(form.codePostal) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.description, 'Description: ') }}
                                    {{ form_widget(form.description) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6">
                                    {{ form_label(form.dateLivraison, 'Date de livraison: ') }}
                                    {{ form_widget(form.dateLivraison) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(form.nbTotalLogements, 'Nombre total de logements: ') }}
                                    {{ form_widget(form.nbTotalLogements) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s3">
                                    {{ form_label(form.noteTransports, 'Note transport: ') }}
                                    {{ form_widget(form.noteTransports) }}
                                </div>
                                <div class="col s3">
                                    {{ form_label(form.noteServices, 'Note service: ') }}
                                    {{ form_widget(form.noteServices) }}
                                </div>
                                <div class="col s3">
                                    {{ form_label(form.noteEsthetisme, 'Note esthétisme: ') }}
                                    {{ form_widget(form.noteEsthetisme) }}
                                </div>
                                <div class="col s3">
                                    {{ form_label(form.noteCommerces, 'Note commerce: ') }}
                                    {{ form_widget(form.noteCommerces) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12 padding-top">
                                    {{ form_label(form.affichagePrix, 'Affichage du Prix: ') }}
                                    {{ form_widget(form.affichagePrix) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s6 padding-top">
                                    {{ form_label(form.eligibilitePinel, 'Eligibilité Loi Pinel: ') }}
                                    {{ form_widget(form.eligibilitePinel) }}
                                </div>
                                <div class="col s6">
                                    {{ form_label(form.accroche, 'Accroche: ') }}
                                    {{ form_widget(form.accroche) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    {{ form_label(form.medias, 'Media: ') }}
                                    {% for media in residence.medias %}
                                        {% if media.id != null %}
                                            <p class="imgUploader"><img class="responsive-img"
                                                                        src="{{ asset('uploads/'~media.lien) }}"/>
                                                <a href="{{ path('residence_media_delete', {"id" : residence.id, "media_id" : media.id}) }}">Supprimer</a>
                                            </p>
                                        {% else %}
                                            <h3>Veuillez charger une nouvelle image.</h3>
                                            <p>N'oubliez pas de renseigner la page sur laquelle vous êtes ainsi que le
                                                type
                                                du
                                                media.</p>
                                            {{ form_widget(form.medias) }}
                                        {% endif %}
                                    {% endfor %}
                                    <a class="btn-floating btn-large waves-effect waves-light teal lighten-4"
                                       id="add-another-media"><i
                                                class="material-icons">file_upload</i></a>
                                </div>
                            </div>
                            <input class="waves-effect waves-light btn-large light-green" type="submit"
                                   value="Modifier"/>
                            {{ form_widget(form._token) }}
                            </form>
                            </div>
                        </div>

                        <ul>
                            <li>
                                <a href="{{ path('admin_residence_index') }}"><i
                                            class="material-icons">keyboard_return</i>Retour
                                    à la liste des résidences</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        // keep track of how many email fields have been rendered
        var mediaCount = '{{ form.medias|length }}';

        jQuery(document).ready(function () {
            jQuery('#add-another-media').click(function (e) { // appbundle_products_add-product
                e.preventDefault();
                var mediaList = jQuery('#{{ form.medias.vars.id }}');

                var newWidget = mediaList.attr('data-prototype');

                    newWidget = newWidget.replace(/<label class="control-label required">__name__label__<\/label>/g, '');
                    newWidget = newWidget.replace(/__name__/g, mediaCount);
                    mediaCount++;
                    // create a new list element and add it to the list
                    var newLi = jQuery('<li></li>').html(newWidget);
                    newLi.appendTo(mediaList);

            });
        })
    </script>
{% endblock %}