{% extends '::layout_admin.html.twig' %}

{% block content %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Article</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ article.id }}</td>
                                </tr>
                                <tr>
                                    <th>Titre</th>
                                    <td>{{ article.titre }}</td>
                                </tr>
                                <tr>
                                    <th>Texte</th>
                                    <td>{{ article.texte }}</td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>{% if article.date %}{{ article.date|date('j-m-Y') }}{% endif %}</td>
                                </tr>
                                </tbody>
                            </table>
                            <hr>
                            <ul>
                                <li>
                                    <a href="{{ path('admin_article_index') }}"><i class="material-icons">keyboard_return</i>Retour à la liste des articles</a>
                                </li>
                                <li>
                                    <a href="{{ path('admin_article_edit', { 'id': article.id }) }}"><i
                                                class="material-icons">build</i>Éditer cet article</a>
                                </li>

                                <li>
                                    {{ form_start(delete_form) }}
                                    <input type="submit" value="Delete" class="waves-effect waves-light btn-large red pull-right">
                                    {{ form_end(delete_form) }}
                                </li>
                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
