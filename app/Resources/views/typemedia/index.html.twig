{% extends '::layout_admin.html.twig' %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Liste des types de media</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <thead class="text">
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Aperçu</th>
                                <th>Éditer</th>
                                </thead>
                                <tbody>

                                {% for typeMedia in typeMedias %}
                                <tr>
                                    <td>
                                        <a href="{{ path('admin_typemedia_show', { 'id': typeMedia.id }) }}">{{ typeMedia.id }}</a>
                                    </td>
                                    <td>{{ typeMedia.nom }}</td>
                                    <td>
                                        <a href="{{ path('admin_typemedia_show', { 'id': typeMedia.id }) }}"><i
                                                    class="material-icons">remove_red_eye</i></a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_typemedia_edit', { 'id': typeMedia.id }) }}"><i
                                                    class="material-icons">build</i></a>
                                    </td>
                                </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                            <hr>
                            <ul>
                                <li>

                                    <a href="{{ path('admin_typemedia_new') }}"
                                       class="btn-floating btn-large waves-effect waves-light light-green"><i
                                                class="material-icons">add</i>Ajouter un type de media</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}