{% extends '::layout_admin.html.twig' %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header light-green">
                            <h4 class="title">Liste de vos événements</h4>
                        </div>
                        <div class="card-content table-responsive">
                            <table class="table">
                                <thead class="text">
                                <th>Id</th>
                                <th>Nom</th>
                                <th>Adresse</th>
                                <th>Codepostal</th>
                                <th>Ville</th>
                                <th>Datedebut</th>
                                <th>Datefin</th>
                                <th>Heuredebut</th>
                                <th>Heurefin</th>
                                <th>Description</th>
                                <th>Aperçu</th>
                                <th>Éditer</th>
                                </thead>
                                <tbody>
                                {% for evenement in evenements %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('admin_evenement_show', { 'id': evenement.id }) }}">{{ evenement.id }}</a>
                                        </td>
                                        <td>{{ evenement.nom }}</td>
                                        <td>{{ evenement.adresse }}</td>
                                        <td>{{ evenement.codePostal }}</td>
                                        <td>{{ evenement.ville }}</td>
                                        <td>{{ evenement.dateDebut|date('j-m-Y') |default('') }} </td>
                                        <td>{{ evenement.dateFin|date('j-m-Y') |default('') }} </td>
                                        <td>{% if evenement.dateFin %}{{ evenement.dateFin|date('j-m-Y') }}{% endif %}</td>
                                        <td>{{ evenement.heureDebut|date('j-m-Y') |default('') }} </td>
                                        <td>{{ evenement.heureFin|date('j-m-Y') |default('') }} </td>
                                        <td>{{ evenement.description }}</td>
                                        <td>
                                            <a href="{{ path('admin_evenement_show', { 'id': evenement.id }) }}"><i
                                                        class="material-icons">remove_red_eye</i></a>
                                        </td>
                                        <td>
                                            <a href="{{ path('admin_evenement_edit', { 'id': evenement.id }) }}"><i
                                                        class="material-icons">build</i></a>
                                        </td>
                                    </tr>

                                {% endfor %}

                                </tbody>
                            </table>
                            <hr>
                            <div class="navigation center">
                                {{ knp_pagination_render(evenements, 'MyOrleansBundle::pagination.html.twig') }}
                            </div>
                            <ul>
                                <li>

                                    <a href="{{ path('admin_evenement_new') }}"
                                       class="btn-floating btn-large waves-effect waves-light light-green"><i
                                                class="material-icons">create</i>Ajouter un
                                        événement</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
